{
    "name": "performantlabs/testor",
    "description": "Robo tasks that work with Automated Testing Kit",
    "type": "robo-tasks",
    "autoload": {
        "psr-4": {
            "PL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PL\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "consolidation/robo": "^4.0",
        "ext-json": "*",
        "robier/mock-global-php-functions": "^1.0",
        "aws/aws-sdk-php": "^3.320"
    },
    "require-dev": {
        "php-mock/php-mock": "^2.5",
        "phpunit/phpunit": "^10.5"
    }
}
